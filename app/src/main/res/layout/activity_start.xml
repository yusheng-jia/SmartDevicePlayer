<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.mantic.control.activity.StartActivity">


    <ImageView
        android:id="@+id/iv_start_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_start_bg_new" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:src="@drawable/ic_mantic_top" />

        <LinearLayout
            android:id="@+id/llLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="42dp"
            android:background="@drawable/btn_primary_bg_selector"
            android:gravity="center|bottom">

            <TextView
                style="@style/BottomRedButtonStyle"
                android:layout_width="wrap_content"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/login" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center|bottom"
            >
            <TextView
                android:id="@+id/tvLegel"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/legel_tip"
                android:textColor="@color/white_50"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/agreement"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/agreement"
                android:textColor="@color/white_50"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/privacy"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/privacy"
                android:textColor="@color/white_50"
                android:textSize="11sp" />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
