<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_start_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.mantic.control.activity.CheckNetworkActivity">

    <ImageView
        android:id="@+id/mantic_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_mantic_top_small" />

    <ImageView
        android:id="@+id/mancit_no_net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/no_network" />

    <TextView
        android:id="@+id/tvLegel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/network_login"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="@string/dev_network_lost"
        style="@style/TextLightStyle" />

    <LinearLayout
        android:id="@+id/network_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_primary_bg_selector"
        android:gravity="center|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/setup_network"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>



</RelativeLayout>
