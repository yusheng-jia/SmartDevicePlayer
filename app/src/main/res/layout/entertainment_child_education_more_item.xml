<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_entertainment_child_education_more_item"
    android:layout_width="wrap_content"
    android:layout_height="41.7dp"
    android:layout_marginBottom="1.85dp"
    android:layout_marginLeft="3.65dp"
    android:layout_marginRight="3.65dp"
    android:layout_marginTop="1.85dp"
    android:gravity="center_vertical"
    android:background="@drawable/child_education_item_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_entertainment_child_education_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/entertainment_voiced_emotion"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_entertainment_child_education_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4.3dp"
            android:text="健康"
            android:textColor="#7c7c7c"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>