<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/channelDetailMorelistBgColor"
    android:layout_width="match_parent"
    android:layout_height="@dimen/channel_detail_more_list_item_cancel_height">
    <com.mantic.control.widget.CircleImageView
        android:id="@+id/audio_playlist_more_icon"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="14dp"
        app:border_width="1dp"
        app:border_color="@color/transparent"
        android:src="@drawable/wyyyy_music_service_icon"/>
    <TextView
        android:layout_toRightOf="@id/audio_playlist_more_icon"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="14dp"
        android:textColor="@color/channelDetailMorelistItemTextColor"
        android:id="@+id/tv_channel_detail_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

</RelativeLayout>