<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/musicServiceSubitemListitemHeight"
    android:background="@drawable/recylerview_item_bg"
    android:paddingLeft="@dimen/fragmentChannelDetailCoverMarginLeft">

    <ImageButton
        android:id="@+id/music_service_subitem_goto_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:visibility="visible"
        android:paddingBottom="@dimen/myChannelHeaderMarginbothside"
        android:paddingLeft="@dimen/myChannelHeaderMarginbothside"
        android:paddingTop="@dimen/myChannelHeaderMarginbothside"
        android:paddingRight="@dimen/fragmentChannelDetailCoverMarginLeft"
        android:src="@drawable/audio_player_fm_love_btn_nor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/music_service_subitem_goto_next_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/music_service_subitem_listitem_icon"
            android:layout_width="@dimen/musicServiceSubitemListitemIconWidth"
            android:layout_height="@dimen/musicServiceSubitemListitemIconHeight"
            android:layout_marginRight="@dimen/channelDetailsItemNameTextMarginLeft"
            android:background="@drawable/shape_gray_square_bg"
            android:padding="0.5px"
            android:src="@drawable/music_service_subitem_listitem_icon_nor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/music_service_subitem_listitem_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/channelDetailsItemNameTextColor" />

            <TextView
                android:id="@+id/music_service_subitem_audience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:maxLines="1"
                android:drawableLeft="@drawable/music_play_count"
                android:text=" 286.7ä¸‡"
                android:layout_marginTop="2dp"
                android:textSize="11sp"
                android:textColor="@color/channel_detail_item_tv_album_sync_time_color" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>