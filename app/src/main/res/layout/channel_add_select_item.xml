<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_goto_channel_details"
    android:layout_width="match_parent"
    android:layout_height="@dimen/myChannelItemHeight"
    android:background="@drawable/recylerview_item_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_my_channel_serial_number"
        android:textSize="@dimen/myChannelSerialNumberTextSize"
        android:textColor="@color/text_color_grey"
        android:layout_marginStart="@dimen/myChannelSerialNumberMarginStart"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="@dimen/myChannelCoverWidth"
        android:layout_height="@dimen/myChannelCoverHeight"
        android:id="@+id/iv_my_channel_cover"
        android:layout_marginStart="@dimen/myChannelCoverMarginStart"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_my_channel_select"
        android:src="@drawable/channel_add_select"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/myChannelHeaderMarginbothside"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/myChannelTitleMarginLeft"
        android:layout_marginRight="@dimen/myChannelTitleMarginLeft"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_my_channel_cover"
        android:layout_marginStart="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/album_title"
            android:textSize="@dimen/myChannelTitleTextSize"
            android:text="@string/my_like_music"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/myChannelTitleTextColor"
            android:layout_marginBottom="@dimen/myChannelTitleMarginBottom"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/album_sub"
            android:textSize="@dimen/myChannelNotesTextSize"
            android:textColor="@color/myChannelNotesTextColor"/>

    </LinearLayout>



</RelativeLayout>