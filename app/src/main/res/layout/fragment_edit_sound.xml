<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_sound_root_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_sound_background">

    <LinearLayout
        android:id="@+id/fragment_channel_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/transparent"
        tools:ignore="UnknownIdInLayout">

        <LinearLayout
            android:id="@+id/edit_sound_title_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical"
            android:focusable="true">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_gravity="left"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="left|center"
                android:src="@drawable/ic_back_white_selector" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_music_service_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="制作"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_title_textsize"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/edit_sound_next"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="14dp"
            android:text="@string/next"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <EditText
        android:layout_below="@id/fragment_channel_details_toolbar"
        android:layout_above="@+id/edit_count"
        android:padding="13dp"
        android:id="@+id/sound_text"
        android:layout_width="match_parent"
        android:hint="@string/sound_text_hint"
        android:textSize="14sp"
        android:background="@color/transparent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:maxLength="500"
        android:textColor="#c0c0c1"
        android:textColorHint="#33ffffff"
        />
    <LinearLayout
        android:id="@+id/process_bar_view"
        android:layout_centerInParent="true"
        android:layout_width="203.3dp"
        android:layout_height="203.3dp"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_marginTop="20.3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sound_processing"/>

        <com.mantic.control.widget.RoundProgressBarWidthNumber
            android:layout_marginTop="20dp"
            android:id="@+id/process_roundProgressBar"
            android:layout_width="123.3dp"
            android:layout_height="123.3dp"
            android:progress="30"
            app:progress_text_color="#cc1f3b"
            app:progress_text_size="20sp"
            app:progress_reached_color="#cc1f3b"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/edit_count"
        android:layout_alignParentEnd="true"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_above="@+id/edit_sound_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sound_input_text"
        android:textColor="#b3c0c1"
        tools:ignore="RtlSymmetry" />
    <LinearLayout
        android:id="@+id/edit_sound_bottom"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:weightSum="3"
        >
        <LinearLayout
            android:id="@+id/anchor_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/anchor_icno"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/sound_people"/>
            <TextView
                android:paddingTop="5dp"
                android:id="@+id/anchor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:text="@string/anchor"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/voice_play"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_sound_play_button"
            android:background="@color/transparent"/>
        <LinearLayout
            android:id="@+id/sound_background_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/sound_background_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/sound_background_music"/>
            <TextView
                android:paddingTop="5dp"
                android:id="@+id/sound_background_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:maxLength="7"
                android:ellipsize="end"
                android:textSize="14sp"
                android:gravity="center"
                android:text="@string/background_sound"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>