<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/recylerview_item_bg"
    android:layout_height="@dimen/myChannelItemHeight">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DeviceListItemStyle"/>
        <TextView
            android:id="@+id/device_statis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DeviceListStatusItemStyle"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/device_list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goto_enter"
        android:layout_marginTop="@dimen/myChannelHeaderMarginbothside"
        android:layout_marginRight="@dimen/myChannelHeaderMarginbothside"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>